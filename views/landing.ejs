<%- include('./partials/header') %>
    <div id="topSectionLND">
        <h1>Your one stop shop for all things with no value unless you trade them</h1>
        <img src="/imgs/sitemedia/chup.png" alt="chup">
    </div>
    <div id="shopLND">
        <h1>Start Shopping</h1>
        <div id="shopGridLND">
            <!-- for 6 random items in item collection retrieve name, image, and price as well as a link -->
            <%for(i=0;i<6;i++){%>
                <%const product=Products[Math.floor(Math.random()*Products.length)];%> 
            <div class="shopCardLND">
                <%if(product.image){%>
                    <img src="<%=product.image%>">
                <%}else{%>
                    <img src="/imgs/sitemedia/chup.png">
                <%}%>
                <span>
                <h2><%=product.name%></h2>
                </span>
            </div>
            <%} %>
        </div>
    </div>
    
<%- include('./partials/footer') %>